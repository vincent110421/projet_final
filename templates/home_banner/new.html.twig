{% extends 'base.html.twig' %}

{% block title %}Nouvelle bannière{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row">

            <div class="col-12 col-md-6 mx-auto login-form main__login-form">
                <h1 class="mb-5">Ajouter bannière</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-flex align-items-center justify-content-between">
                    <a class="btn btn-primary" href="{{ path('app_home_banner_index') }}"><i class="fa fa-arrow-left"></i> Retour à la liste</a>
                    <button class="btn btn-primary m-0"><i class="fa fa-edit"></i> {{ button_label|default('Ajouter') }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

